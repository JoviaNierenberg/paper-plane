{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/purple-airplane.png",
    "128": "images/purple-airplane.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": {
      "19": "images/purple-airplane.png",
      "38": "images/purple-airplane.png"
    },
    "default_title": "paperplane"
    // "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "debugger",
    "storage",
    "unlimitedStorage",
    "https://*/*",
    "http://*/*",
    "tabs",
    "http://*/",
    "http://www.easybib.com/cite/form",
    "http://api.easybib.com/2.1/rest/cite"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
    // "page": "background/background.html",
    // "persistant" : true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "bower_components/angular/angular-csp.css",
        "bower_components/font-awesome/css/font-awesome.min.css",
        "styles/main.css"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/lodash/lodash.min.js",
        "bower_components/angular/angular.min.js",
        "bower_components/moment/min/moment.min.js",
        "scripts/contentscript.js",
        "bower_components/zeroclipboard/dist/zeroClipboard.min.js"
      ],
      "html": ["./templates/overlay.html"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self'; 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources" : [
    "bower_components/angular/*",
    "templates/*"
  ],
  "omnibox": {
    "keyword":"paperplane"
  }
}
